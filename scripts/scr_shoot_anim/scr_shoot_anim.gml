// Shoot Animation
if (facing == PlayerDirections.UP) {
	sprite_index = spr_delta_shoot_up;
} else if (facing == PlayerDirections.LEFT) {
	sprite_index = spr_delta_shoot_left;
} else if (facing == PlayerDirections.DOWN) {
	sprite_index = spr_delta_shoot_down;
} else if (facing == PlayerDirections.RIGHT) {
	sprite_index = spr_delta_shoot_right;
}